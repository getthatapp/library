<h1>Books list</h1>

<% if is_admin %>
  <%= link_to 'Add new book', new_book_path, class: 'btn btn-default btn-sm' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>